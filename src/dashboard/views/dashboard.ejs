<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Welcome to Your Dashboard</h1>
        <nav>
            <ul>
                <li><a href="/monitors">Manage Monitors</a></li>
                <li><a href="/payments">Manage Payments</a></li>
                <li><a href="/settings">Settings</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section>
            <h2>Your Uptime Statistics</h2>
            <table>
                <thead>
                    <tr>
                        <th>Monitor Name</th>
                        <th>Status</th>
                        <th>Uptime</th>
                        <th>Last Checked</th>
                    </tr>
                </thead>
                <tbody>
                    <% monitors.forEach(monitor => { %>
                        <tr>
                            <td><%= monitor.name %></td>
                            <td><%= monitor.status ? 'Online' : 'Offline' %></td>
                            <td><%= monitor.uptime %></td>
                            <td><%= monitor.lastChecked %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>
        <section>
            <h2>Your Subscription Plan</h2>
            <p>Current Plan: <%= user.subscriptionPlan %></p>
            <a href="/subscriptions">Manage Subscriptions</a>
        </section>
    </main>
    <footer>
        <p>&copy; 2023 Watchdog. All rights reserved.</p>
    </footer>
</body>
</html>